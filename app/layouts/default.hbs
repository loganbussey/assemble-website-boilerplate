<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="referrer" content="always">

    <link rel="preload" href="/styles/main.css" as="style">
    <link rel="preload" href="/scripts/main.js" as="script">

    {{#each dns_prefetch}}
      <link rel="dns-prefetch" href="//{{{this}}}">
    {{/each}}

    {{#each layout_meta_tags}}
      {{{this}}}
    {{/each}}
    {{#each page_meta_tags}}
      {{{this}}}
    {{/each}}

    <title>{{seo_title}}</title>
    <meta name="description" content="{{seo_description}}">

    {{#if fb_app_id}}<meta property="fb:app_id" content="{{fb_app_id}}">{{/if}}

    <meta property="og:site_name" content="{{og_site_name}}">
    <meta property="og:title" content="{{#if og_title}}{{og_title}}{{else}}{{seo_title}}{{/if}}">
    <meta property="og:description" content="{{#if og_description}}{{og_description}}{{else}}{{seo_description}}{{/if}}">
    <meta property="og:type" content="{{#if og_type}}{{og_type}}{{else}}website{{/if}}">
    <meta property="og:image" content="{{#if og_image}}{{og_image}}{{else}}/media/open-graph/default.jpg{{/if}}">

    {{#isnt page_name 'error'}}
      <meta property="og:url" content="{{replace dirname root ""}}/">
      <link rel="canonical" href="{{replace dirname root ""}}/">
    {{/isnt}}

    {{#if og_video}}
      <meta property="og:video:url" content="{{og_video.url}}">
      <meta property="og:video:secure_url" content="{{og_video.url}}">
      <meta property="og:video:width" content="{{og_video.width}}">
      <meta property="og:video:height" content="{{og_video.height}}">
      <meta property="og:video:type" content="{{og_video.type}}">
    {{/if}}

    <meta name="twitter:card" content="{{#if twitter_card}}{{twitter_card}}{{else}}summary{{/if}}">
    <meta name="twitter:site" content="{{twitter_site}}">

    {{#if twitter_player}}
      <meta name="twitter:player" content="{{twitter_player.url}}">
      <meta name="twitter:player:width" content="{{twitter_player.width}}">
      <meta name="twitter:player:height" content="{{twitter_player.height}}">
    {{/if}}

    <link rel="apple-touch-icon" sizes="180x180" href="/media/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/media/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/media/favicon-16x16.png">
    <link rel="manifest" href="/media/site.webmanifest">
    <link rel="mask-icon" href="/media/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="apple-mobile-web-app-title" content="{{name}}">
    <meta name="application-name" content="{{name}}">
    <meta name="msapplication-TileColor" content="#2d89ef">
    <meta name="msapplication-config" content="/media/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">

    <!-- build:css(.tmp) /styles/main.css -->
      <link rel="stylesheet" href="/styles/main.css">
      <link rel="stylesheet" href="/icons.css">
    <!-- endbuild -->

    {{#each layout_head_scripts}}
      {{{this}}}
    {{/each}}
    {{#each page_head_scripts}}
      {{{this}}}
    {{/each}}

    <!-- build:js(.tmp) /scripts/main.js -->
      <script src="/scripts/main.js" async></script>
    <!-- endbuild -->

  </head>
  <body class="{{#each layout_body_classes}}{{this}} {{/each}} {{page_body_class}}">

    {{> body}}

    <script type="application/ld+json">
      {
        "@context": "http://schema.org",
        "@type": "Organization",
        "@id": "#organization",
        "name": "{{og_site_name}}",
        "url": "{{url}}",
        "logo": "{{url}}media/logos/logo.svg",
        "sameAs": [
          {{#each social_urls}}
            "{{{this}}}"{{#unless @last}},{{/unless}}
          {{/each}}
        ]
      }
    </script>

    <script type="application/ld+json">
      {
        "@context": "http://schema.org",
        "@type": "WebSite",
        "@id": "#website",
        "name": "{{og_site_name}}",
        "url": "{{url}}",
        "publisher": {
         "@type": "Organization",
          "name": "{{og_site_name}}"
        }
      }
    </script>

    <script type="application/ld+json">
      {
        "@context": "http://schema.org",
        "@type": "WebPage",
        "name": "{{seo_title}}",
        "description": "{{seo_description}}",
        {{#isnt page_name 'error'}}
          "url": "{{replace dirname root ""}}/",
        {{/isnt}}
        "publisher": {
          "@type": "Organization",
          "name": "{{og_site_name}}"
        }
      }
    </script>

  </body>
</html>
